<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>org.kjots.json-toolkit</groupId>
    <artifactId>json-toolkit</artifactId>
    <version>1.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  
  <artifactId>json-object</artifactId>
  
  <packaging>jar</packaging>
  
  <name>JSON Object</name>
  
  <properties>
    <package>org.kjots.json.object</package>
    <package.path>org/kjots/json/object</package.path>
    
    <gwt.module.name>JsonObject</gwt.module.name>
    <gwt.module>${package}.${gwt.module.name}</gwt.module>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>org.kjots.json-toolkit</groupId>
      <artifactId>json-content</artifactId>
      <version>${project.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.inject</groupId>
      <artifactId>guice</artifactId>
      <version>3.0-rc2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm-all</artifactId>
      <version>3.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>${gwt.sdk.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-dev</artifactId>
      <version>${gwt.sdk.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.inject</groupId>
      <artifactId>gin</artifactId>
      <version>1.5-post-gwt-2.2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>1.8.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build>
    <resources>
      <resource>
        <directory>src/main/gwt</directory>
        <includes>
          <include>${package.path}/**</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>${package.path}/shared/**/*.java</include>
          <include>${package.path}/gwt/client/**/*.java</include>
        </includes>
      </resource>
    </resources> 
    
    <testResources>
      <testResource>
        <directory>src/test/gwt</directory>
        <includes>
          <include>${package.path}/**</include>
        </includes>
      </testResource>
    </testResources>
    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <includes>
            <include>${package.path}/JvmJsonObjectTestSuite.java</include>
          </includes>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <version>${gwt.plugin.version}</version>
        <configuration>
          <includes>${package.path}/gwt/test/GwtJsonObjectGwtTestSuite.java</includes>
          <mode>htmlunit</mode>
          <testTimeOut>0</testTimeOut>
        </configuration>
        <executions>
          <execution>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <destDir>doc/api</destDir>
          <notimestamp>true</notimestamp>
          <offlineLinks>
            <offlineLink>
              <url>http://json-toolkit.googlecode.com/hg/json-content/doc/api/</url>
              <location>${basedir}/../json-content/doc/api/</location>
            </offlineLink>
          </offlineLinks>
          <links>
            <link>http://google-web-toolkit.googlecode.com/svn/javadoc/2.2/</link>
            <link>http://google-guice.googlecode.com/svn/tags/3.0-rc2/javadoc/</link>
            <link>http://google-gin.googlecode.com/svn/tags/1.5.0-post-gwt-2.2/javadoc/</link>
          </links>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins> 
  </build>
</project>
